<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mypost_card_item"
    android:layout_width="match_parent"
    android:layout_height="?listPreferredItemHeightLarge"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mypost_card_layout"
        android:layout_width="match_parent"
        android:layout_height="?listPreferredItemHeightLarge">

        <TextView
            android:id="@+id/mypost_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?listPreferredItemPaddingLeft"
            android:layout_marginTop="?android:listPreferredItemPaddingStart"
            android:singleLine="true"
            android:text="Test Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/mypost_price_text"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mypost_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?android:listPreferredItemPaddingStart"
            android:layout_marginRight="?android:listPreferredItemPaddingRight"
            android:text="$99999.99"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@id/mypost_trash_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mypost_genre_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="?android:listPreferredItemPaddingRight"
            android:text="Supplies"
            android:textAlignment="textEnd"
            app:layout_constraintRight_toLeftOf="@id/mypost_trash_btn"
            app:layout_constraintLeft_toRightOf="@+id/mypost_date_text"
            app:layout_constraintTop_toBottomOf="@id/mypost_price_text" />

        <TextView
            android:id="@+id/mypost_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?listPreferredItemPaddingLeft"
            android:text="31 December 2022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mypost_title_text" />

        <Button
            android:id="@+id/mypost_trash_btn"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:backgroundTint="#EDEDED"
            app:icon="@drawable/trash_filled_icon"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconTint="?attr/colorError"
            app:iconTintMode="multiply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>