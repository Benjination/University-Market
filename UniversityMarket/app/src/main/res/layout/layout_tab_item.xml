<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <ImageView
        android:id="@+id/tab_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="?listPreferredItemPaddingLeft"
        android:layout_marginTop="?listPreferredItemPaddingStart"
        android:layout_marginBottom="?listPreferredItemPaddingEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tab_text"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/market_icon"
        app:tint="?colorOnTertiary" />

    <TextView
        android:id="@+id/tab_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="?listPreferredItemPaddingStart"
        android:layout_marginRight="?listPreferredItemPaddingRight"
        android:layout_marginBottom="?listPreferredItemPaddingEnd"
        android:text="TextView"
        android:textColor="?colorOnTertiary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tab_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>