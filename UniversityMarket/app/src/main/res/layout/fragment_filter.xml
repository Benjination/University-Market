<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FilterFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/genre_filter_title"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="Filter by Genre"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"/>

    <RadioGroup
        android:id="@+id/genre_filter_group"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/genre_filter_title"
        android:background="?colorTertiaryContainer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39dp">
    </RadioGroup>

    <TextView
        android:id="@+id/price_filter_title"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="Filter by Price"
        android:layout_marginStart="25dp"
        android:layout_marginTop="210dp"/>

    <RadioGroup
        android:id="@+id/price_filter_group"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_filter_title"
        android:background="?colorTertiaryContainer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="239dp">
    </RadioGroup>

    <TextView
        android:id="@+id/uploadDate_filter_title"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="Sort by Upload Date"
        android:layout_marginStart="25dp"
        android:layout_marginTop="410dp"/>

    <RadioGroup
        android:id="@+id/uploadDate_filter_group"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="?colorTertiaryContainer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="439dp">
    </RadioGroup>

    <Button
        android:id="@+id/clear_filters_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorSecondary"
        android:text="Clear Filters"
        android:textColor="?colorOnSecondary"
        android:layout_marginTop="529dp"
        android:layout_gravity="center_horizontal"/>




</FrameLayout>
